# Botnet Orchestrator Environment Configuration
# Copy this file to .env and customize the values

# Secrets encryption key (generate a new one for production)
# You can generate a new key with: openssl rand -hex 32
SECRETS_KEY=dd9ee7695111c4741b49eca4edd6319bff068a70e77c292cfb0c8f1adb2e3ac6

# Container engine to use (docker or podman)
ENGINE=docker

# Orchestrator service configuration
ORCHESTRATOR_PORT=3080
ORCHESTRATOR_CPU_LIMIT=1.0
ORCHESTRATOR_MEMORY_LIMIT=1024M
ORCHESTRATOR_CPU_RESERVATION=0.25
ORCHESTRATOR_MEMORY_RESERVATION=256M

# Task execution configuration (native deployment uses simple containers)
TASK_RUNNER_IMAGE=denoland/deno:latest
TASK_DEFAULT_TIMEOUT=1800000
TASK_DEFAULT_MEMORY_LIMIT=128m
TASK_DEFAULT_CPU_LIMIT=0.25

# Pruning configuration
PRUNING_ENABLED=true
PRUNING_RETENTION_DAYS=30
PRUNING_BATCH_SIZE=100

# Scheduler configuration
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60000
